<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        <%= title %>
    </title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <link href="/stylesheets/material-kit.css" rel="stylesheet" />
    <link href="/stylesheets/utils.css" rel="stylesheet" />
</head>

<body>
    <header>
        <div class="index-page sidebar-collapse">
            <%- include('../layouts/navbar') %>
                <div class="embed-responsive embed-responsive-21by9">
                    <iframe src=<%=film.video %>  frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
        </div>
        <div class="p-4 mb-2 bg-gradient-primary"> </div>
    </header>
    <main class="main main-raised">
        <div class="container">
            <div class="section infosection">
                <div class="text-center">
                    <div class="row">
                        <div class="col-md-8 ml-auto mr-auto">
                            <h2 class="title">
                                <%= title %>
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="media">
                    <img class="align-self-start mr-3" src=<%=film.linkFilm %> alt="Film poster">
                    <div class="media-body">
                        <p style="font-size: large;">
                            <b>Director:</b>
                            <%= film.director %>
                        </p>
                        <p style="font-size: large;">
                            <b>Cast:</b>
                            <%= film.Cast %>
                        </p>
                        <p style="font-size: large;">
                            <b>Release Date:</b>
                            <%= releasedate %>
                        </p>
                        <p style="font-size: large;">
                            <b>Duration:</b>
                            <%= film.duration %> mins
                        </p>
                        <p style="font-size: large;">
                            <b>Genre:</b>
                            <%= film.genre %>
                        </p>
                        <p style="font-size: large;">
                            <b>Language:</b>
                            <%= film.language %>
                        </p>
                        <p style="font-size: large;">
                            <b>Description:</b>
                        </p>
                        <p style="font-size: large;">
                            <%= film.description %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="showtimessection">
                <div class="text-center">
                    <div class="row">
                        <div class="ml-auto mr-auto">
                            <h3 class="title">
                                Showtimes
                            </h3>
                        </div>
                    </div>
                </div>
                <form id="frmDate">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="label-control">Pick a date</label>
                                <input type="text" id="datepicker" class="form-control datepicker">
                                <div id="date"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input id="filmid" type="hidden" value="<%= film.id %>">
                            <button class="btn btn-success">View Showtimes</button>
                        </div>
                    </div>
                </form>
                <form method="GET">
                    <div id="showtimes">
                    </div>
                </form>
            </div>
            <div class="p-4 mb-2 bg-gradient-primary"> </div>
        </div>
    </main>
    <footer>
        <%- include('../layouts/footer') %>
    </footer>

    <%- include('../layouts/scripts') %>
        <script>
            $(function() {
                $('#datepicker').datetimepicker({
                    format: 'DD/MM/YYYY'
                });
            });
        </script>
        <script src="javascripts/js/film.js"></script>
</body>

</html>