<% include ../head %>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

      <!-- Sidebar -->
      <% include ../navbar %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">

            <!-- Header -->
            <% include ../header %>
              <!-- End of Header -->

              <!-- Begin Page Content -->
              <div class="container-fluid">

                <!-- Page Heading -->
                <a href="/admin/showtime/add"><button type="button" class="btn btn-primary">Add Showtime</button></a>
                <!-- <h1 class="h3 mb-2 text-gray-800">Tables</h1> -->

                <!-- Show Data -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary text-center">Select Options To View & Delete Showtimes
                    </h6>
                  </div>

                  <div class="card-body">
                    <div class="card-body">
                      <div class="container">
                        <div class="form-group" style="color:black;">
                          <label for="theater">Theater</label>
                          <select name="idtheater" id="theater" onchange="renderTableShowtime()">
                            <% theaters.forEach(function(itemTheater){ %>
                              <option value="<%= itemTheater.id %>">
                                <%= itemTheater.name %>
                              </option>
                              <% }); %>
                          </select>
                          <br>
                          <br>
                          <label for="">The Date</label>
                          <input type="date" id="date" name="date" value="<%= dateToday %>"
                            onchange="renderTableShowtime()">
                          <br><br>
                          <div class="table-responsive">
                            <table class="table table-bordered table-dark table-hover text-center" width="100%"
                              cellspacing="0">
                              <thead>
                                <tr>
                                  <th style="width: 50%;">Film</th>
                                  <th style="width: 30%;">Start Time</th>
                                  <th style="width: 20%;">Delete</th>
                                </tr>
                              </thead>
                              <tfoot>
                                <tr>
                                  <th colspan="3">END</th>
                                </tr>
                              </tfoot>
                              <tbody id="admin_showtime_table_tbody">
                                <% defaultTheaterShowtime.forEach(function(item){ %>
                                  <tr>
                                    <td>
                                      <%= item.title %>
                                    </td>
                                    <td>
                                      <%= item.starttime %>
                                    </td>
                                    <td>
                                      <button class="btn btn-danger"
                                        onclick="deleteShowtime(<%= item.idshowtime %>)">Delete</button>
                                    </td>
                                  </tr>
                                  <% }); %>
                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End of Main Content -->

              <!-- Footer -->
              <% include ../footer%>
                <!-- End of Footer -->
          </div>
          <!-- End of Content Wrapper -->
        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <% include ../logout %>

          <!-- Delete Popup -->








          <!-- Add Javascript-->
          <% include ../javascripts-addon %>
  </body>

  </html>