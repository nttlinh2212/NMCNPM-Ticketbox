<% include ../head %>

    <body id="page-top">
        <!-- Page Wrapper -->
        <div id="wrapper">

            <!-- Sidebar -->
            <% include ../navbar %>
                <!-- End of Sidebar -->

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <!-- Header -->
                        <% include ../header %>
                            <!-- End of Header -->

                            <!-- Begin Page Content -->
                            <div class="container-fluid">

                                <!-- Show Data -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h1 class="m-0 font-weight-bold text-primary text-center">Add Showtime</h6>
                                    </div>

                                    <div class="card-body">
                                        <div class="container">
                                            <form action="/admin/showtime/add" method="post" onsubmit="return submitFormAddShowtime()">
                                                <div class="form-group">
                                                    <label for="theater">Theater</label>
                                                    <select name="idtheater" id="theater">
                                                        <% theaters.forEach(function(itemTheater){ %>
                                                            <option value="<%= itemTheater.id %>">
                                                                <%= itemTheater.name %>
                                                            </option>
                                                            <% }); %>
                                                    </select>
                                                    <br>
                                                    <br>
                                                    <label for="film">Film</label>
                                                    <select name="idfilm" id="film">
                                                        <% films.forEach(function(itemFilm){ %>
                                                            <option value="<%= itemFilm.id %>">
                                                                <%= itemFilm.title %>
                                                            </option>
                                                            <% }); %>
                                                    </select>
                                                    <br>
                                                    <br>

                                                    <label for="birthday">The Beginning Day:</label>
                                                    <input type="date" id="beginningday" name="beginningday"
                                                        style="margin-right:70px;" required>

                                                    <label for="">The End Day</label>
                                                    <input type="date" id="endday" name="endday" required>
                                                    <br>
                                                    <input type="checkbox" id="ignore" name="ignore" value="1">
                                                    <label for="ignore">Ignore showtime(s) that there is a existing showtime at starttime in the theater you chose
                                                    </label><br>

                                                    <label for="starttime">Start Time</label>
                                                    <select id="starttime" name="starttime">
                                                        <option value="08:00:00">08:00:00</option>
                                                        <option value="10:00:00">10:00:00</option>
                                                        <option value="12:00:00">12:00:00</option>
                                                        <option value="14:00:00">14:00:00</option>
                                                        <option value="16:00:00">16:00:00</option>
                                                        <option value="18:00:00">18:00:00</option>
                                                        <option value="20:00:00">20:00:00</option>
                                                        <option value="22:00:00">22:00:00</option>
                                                    </select>
                                                    <br>

                                                </div>

                                                <button type="submit" class="btn btn-primary" style="width: 100%;">Add
                                                    Showtime</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                    <!-- End of Main Content -->

                    <!-- Footer -->
                    <% include ../footer%>
                        <!-- End of Footer -->
                </div>
                <!-- End of Content Wrapper -->
        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <% include ../logout %>

            <!-- Add Javascript-->
            <% include ../javascripts-addon %>
    </body>

    </html>