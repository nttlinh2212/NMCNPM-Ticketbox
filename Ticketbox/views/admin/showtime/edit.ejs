<% include ../head %>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

      <!-- Sidebar -->
      <% include ../navbar %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">

            <!-- Header -->
            <% include ../header %>
              <!-- End of Header -->

              <!-- Begin Page Content -->
              <div class="container-fluid">

                <!-- Show Data -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h1 class="m-0 font-weight-bold text-primary text-center">Edit Showtime</h6>
                  </div>

                  <div class="card-body">
                    <div class="container">
                      <form action="/admin/showtime/edit" method="post">
                        <div class="form-group">
                          <label for="">Id Showtime</label>
                          <input type="text" name="id" id="" class="form-control" aria-describedby="helpId"
                            value="<%= showtimes.id %>" readonly>
                            <br>
                            <label for="theater">Theater</label>
                            <select name="idtheater" id="theater">
                            <%
                                theaters.forEach(function(itemTheater){
                                    %>
                                    <option value="<%= itemTheater.id %>"><%= itemTheater.name %></option>
                                    <%
                                });
                            %>
                            </select>
                            <br>
                            <br>
                            <label for="film">Film</label>
                            <select name="idfilm" id="film">
                            <%
                                films.forEach(function(itemFilm){
                                    %>
                                    <option value="<%= itemFilm.id %>"><%= itemFilm.title %></option>
                                    <%
                                });
                            %>
                            </select>
                            <br>
                            <br>
                          <label for="">Start Time</label>
                          <input type=" text" name="starttime" id="" class="form-control" aria-describedby="helpId"
                            value="<%= showtimes.starttime %>">
                          <label for="">Number of Rows</label>
                          <input type=" text" name="numberofrows" id="" class="form-control" aria-describedby="helpId"
                            value="<%= showtimes.numberofrows %>">
                          <label for="">Number of Columns</label>
                          <input type=" text" name="numberofcolumns" id="" class="form-control"
                            aria-describedby="helpId" value="<%= showtimes.numberofcolumns %>">
                          <label for="">Date</label>
                          <input type=" text" name="date" id="" class="form-control" aria-describedby="helpId"
                            value="<%= showtimes.date %>">
                        </div>
                        <button type=" submit" class="btn btn-primary" style="width: 100%;">Save changes</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End of Main Content -->

              <!-- Footer -->
              <% include ../footer%>
                <!-- End of Footer -->
          </div>
          <!-- End of Content Wrapper -->
        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <% include ../logout %>

          <!-- Add Javascript-->
          <% include ../javascripts-addon %>
  </body>

  </html>