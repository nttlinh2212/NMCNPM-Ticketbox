<% include ../head %>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

      <!-- Sidebar -->
      <% include ../navbar %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">

            <!-- Header -->
            <% include ../header %>
              <!-- End of Header -->

              <!-- Begin Page Content -->
              <div class="container-fluid">

                <!-- Page Heading -->
                <a href="/admin/theater/add"><button type="button" class="btn btn-primary">Add Theater</button></a>
                <!-- <h1 class="h3 mb-2 text-gray-800">Tables</h1> -->

                <!-- Show Data -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Theater</h6>
                  </div>

                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                          <tr>
                            <th>Id Theater</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Action</th>
                          </tr>
                        </thead>

                        <tbody>
                          <% theaters.forEach(function(item){ %>
                            <tr>
                              <td>
                                <%= item.id %>
                              </td>
                              <td>
                                <%= item.name %>
                              </td>
                              <td>
                                <%= item.address %>
                              </td>
                              <td style="text-align: center; padding-right: 5px;">
                                <a href="theater/edit/<%= item.id %>" class="btn btn-primary">
                                  Edit
                                </a>
                                <form action="/admin/theater/delete" method="post">
                                  <button type="submit" class="btn btn-secondary btn-del" name="id_del"
                                    value="<%= item.id %>">
                                    Delete
                                  </button>
                                </form>
                              </td>
                            </tr>
                            <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
          </div>
          <!-- End of Main Content -->

          <!-- Footer -->
          <% include ../footer%>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <% include ../logout %>

      <!-- Delete Popup -->








      <!-- Add Javascript-->
      <% include ../javascripts-addon %>
  </body>

  </html>