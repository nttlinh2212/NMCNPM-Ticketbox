<% include ../head %>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

      <!-- Sidebar -->
      <% include ../navbar %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">

            <!-- Header -->
            <% include ../header %>
              <!-- End of Header -->

              <!-- Begin Page Content -->
              <div class="container-fluid">

                <!-- Show Data -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h1 class="m-0 font-weight-bold text-primary text-center">Edit Theater</h6>
                  </div>

                  <div class="card-body">
                    <div class="container">
                      <form action="/admin/theater/edit" method="post" >
                        <div class="form-group">
                          <label for="">ID</label>
                          <input type="text" name="id" id="" class="form-control" value="<%= theaters.id %>" readonly
                            aria-describedby="helpId">
                          <label for="">Name</label>
                          <input type="text" name="name" id="" class="form-control" value="<%= theaters.name %>"
                            aria-describedby="helpId">
                          <label for="">Address</label>
                          <input type="text" name="address" id="" class="form-control" value="<%= theaters.address %>"
                            aria-describedby="helpId">
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Save changes</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End of Main Content -->

              <!-- Footer -->
              <% include ../footer%>
                <!-- End of Footer -->
          </div>
          <!-- End of Content Wrapper -->
        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <% include ../logout %>

          <!-- Add Javascript-->
          <% include ../javascripts-addon %>
  </body>

  </html>