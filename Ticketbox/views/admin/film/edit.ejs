<% include ../head %>
  <% console.log(films) %>

    <body id="page-top">
      <!-- Page Wrapper -->
      <div id="wrapper">

        <!-- Sidebar -->
        <% include ../navbar %>
          <!-- End of Sidebar -->

          <!-- Content Wrapper -->
          <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

              <!-- Header -->
              <% include ../header %>
                <!-- End of Header -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                  <!-- Show Data -->
                  <div class="card shadow mb-4">
                    <div class="card-header py-3">
                      <h1 class="m-0 font-weight-bold text-primary text-center">Edit Film</h6>
                    </div>

                    <div class="card-body">
                      <div class="container">
                        <form action="/admin/film/edit" method="post" enctype="multipart/form-data">
                          <div class="form-group">
                            <label for="">Id</label>
                            <input type="text" name="id" id="" class="form-control" value="<%= films.id %>"
                              aria-describedby="helpId" readonly>
                            <label for="">Title</label>
                            <input type="text" name="title" id="" class="form-control" value="<%= films.title %>"
                              aria-describedby="helpId">
                            <label for="">Description</label>
                            <input type="text" name="description" id="" class="form-control"
                              value="<%= films.description %>" aria-describedby="helpId">
                            <label for="">Duration</label>
                            <input type="text" name="duration" id="" class="form-control" value="<%= films.duration %>"
                              aria-describedby="helpId">
                            <label for="">Genre</label>
                            <input type="text" name="genre" id="" class="form-control" value="<%= films.genre %>"
                              aria-describedby="helpId">
                            <label for="">Director</label>
                            <input type="text" name="director" id="" class="form-control" value="<%= films.director %>"
                              aria-describedby="helpId">
                            <label for="">Cast</label>
                            <input type="text" name="Cast" id="" class="form-control" value="<%= films.Cast %>"
                              aria-describedby="helpId">
                            <label for="">Release date</label>
                            <input type="date" name="releasedate" id="" class="form-control"
                              value="<%= films.releasedate %>" aria-describedby="helpId">
                            <label for="">Language</label>
                            <input type="text" name="language" id="" class="form-control" value="<%= films.language %>"
                              aria-describedby="helpId">
                            <br>
                            <label for="">Upload Image</label>
                            <input type="file" name="file" id="" accept="image/*" class="" onchange="previewFile(this);" 
                              aria-describedby="helpId" >
                            </p>
                            <img id="previewImg" src="<%= films.linkFilm %>" style="width: 200px; height: auto;">
                            <p>
                          </div>
                          <button type="submit" class="btn btn-primary" style="width: 100%;">Save changes</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <% include ../footer%>
                  <!-- End of Footer -->
            </div>
            <!-- End of Content Wrapper -->
          </div>
          <!-- End of Page Wrapper -->

          <!-- Scroll to Top Button-->
          <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
          </a>

          <!-- Logout Modal-->
          <% include ../logout %>

            <!-- Add Javascript-->
            <% include ../javascripts-addon %>
    </body>

    </html>