<% include ../head %>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

      <!-- Sidebar -->
      <% include ../navbar %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">

            <!-- Header -->
            <% include ../header %>
              <!-- End of Header -->

              <!-- Begin Page Content -->
              <div class="container-fluid">

                <!-- Show Data -->
                <div class="card shadow mb-4">
                  <div class="card-header py-3">
                    <h1 class="m-0 font-weight-bold text-primary text-center">Edit User</h6>
                  </div>

                  <div class="card-body">
                    <div class="container">
                      <form action="/admin/account/edit" method="post">
                        <div class="form-group">
                          <input type="hidden" name="id" id="" class="form-control" value="<%= users.id %>"
                            aria-describedby="helpId" readonly>
                          <label for="">Name</label>
                          <input type="text" name="fullname" id="" class="form-control" value="<%= users.fullname %>"
                            aria-describedby="helpId" required minlength="5" maxlength="50">
                          <label for="">Dob</label>
                          <input type="date" name="dob" id="" class="form-control" value="<%= users.dob %>"
                            aria-describedby="helpId" required>
                          <label for="">Username</label>
                          <input type="text" name="username" id="" class="form-control" value="<%= users.username %>"
                            aria-describedby="helpId" readonly>
                          <label for="">Phone</label>
                          <input type="text" name="phone" id="" class="form-control" value="<%= users.phone %>"
                            aria-describedby="helpId">
                          <label for="">Point</label>
                          <input type="number" name="point" id="" class="form-control" value="<%= users.point %>"
                            aria-describedby="helpId" required min="0" max="100000" step="1">
                          <label for="">Favourite genre</label>
                          <input type="text" name="favouriteGenre" id="" class="form-control"
                            value="<%= users.favouriteGenre %>" aria-describedby="helpId">
                          <label for="isadmin">Is admin:</label>
                          <% if(users.isadmin===1){ %>
                            <select id="isadmin" name="isadmin" class="form-control">
                              <option value="1" selected>Yes</option>
                              <option value="0">No</option>
                            </select>
                            <% } else{ %>
                              <select id="isadmin" name="isadmin" class="form-control">
                                <option value="1">Yes</option>
                                <option value="0" selected>No</option>
                              </select>
                              <% } %>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Save changes</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End of Main Content -->

              <!-- Footer -->
              <% include ../footer%>
                <!-- End of Footer -->
          </div>
          <!-- End of Content Wrapper -->
        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
          <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <% include ../logout %>

          <!-- Add Javascript-->
          <% include ../javascripts-addon %>
  </body>

  </html>