<%- include('./layouts/head') %>

    <body>
        <header>
            <%- include('./layouts/header') %>
        </header>

        <main class="main main-raised">
            <div id="carouselExampleIndicators" class="carousel slide mh-50" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/images/poster_1.jpg" alt="">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/poster_2.jpg" alt="">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/poster_3.jpg" alt="">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="movie-area">
                <div class="title text-center">
                    <h2>Movie</h2>
                </div>
                <div class="container">
                    <div class="row">
                        <% films.forEach(element => { %>
                            <div class="col-md-3">
                                <div class="card mw-15">
                                    <img class="card-img-top" src="<%= element.linkFilm %>" rel="nofollow" alt="Card image cap">
                                    <a class="text-center" href="/film?id=<%= element.id %>">
                                        <h4 class="card-title overflow-hidden text-truncate">
                                            <%= element.title %>
                                        </h4>
                                    </a>
                                    <div class="card-body">
                                        <p class="card-text text-truncate">Genre:
                                            <%= element.genre %>
                                        </p>
                                        <p class="card-text">Duration:
                                            <%= element.duration %> mins
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
            <div class="theater-area">
                <div class="title text-center">
                    <h2>Theater</h2>
                </div>
                <div class="card card-nav-tabs card-plain">
                    <div class="card-header card-header-danger">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <ul class="nav nav-tabs" data-tabs="tabs">
                                    <% theaters.forEach(element => { %>
                                        <li class="nav-item col-md-2">
                                            <a class="nav-link text-center" href="#theater<%= element.id %>" data-toggle="tab">
                                                <%= element.name %>
                                            </a>
                                        </li>
                                        <% }); %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="tab-content text-center">
                        <% theaters.forEach(element => { %>
                            <div class="tab-pane" id="theater<%= element.id %>">
                                <h4 class="card-title">
                                    <%= element.name %>
                                </h4>
                                <p class="card-text">
                                    <%= element.address %>
                                </p>
                                <form action="/theater/<%= element.id %>">
                                    <div class="row justify-content-center">
                                        <button class="btn btn-success">View Showtimes</button>
                                    </div>
                                </form>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </div>
            </div>
        </main>
        <footer>
            <%- include('./layouts/footer') %>
        </footer>
        <%- include('./layouts/scripts') %>
    </body>

    </html>